{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react"],
  "plugins": ["babel", "react", "promise"],
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false,
    "__COVERAGE__": false,
    "process.env.NODE_ENV": false,
    "NODE_ENV": false,
    "__BASENAME__": false,
    "JAKE_HASH_API_BASE": false
  },
  "rules": {
    "key-spacing": 0,
    "jsx-quotes": [2, "prefer-single"],
    "max-len": [1, 120, 2],
    "object-curly-spacing": [2, "always"]
  }
}
